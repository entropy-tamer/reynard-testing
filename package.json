{
  "name": "reynard-testing",
  "version": "0.2.0",
  "description": "Unified testing framework for Reynard packages",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./mocks": {
      "import": "./dist/mocks/index.js",
      "types": "./dist/mocks/index.d.ts"
    },
    "./fixtures": {
      "import": "./dist/fixtures/index.js",
      "types": "./dist/fixtures/index.d.ts"
    },
    "./doc-tests": {
      "import": "./dist/doc-tests/index.js",
      "types": "./dist/doc-tests/index.d.ts"
    },
    "./doc-test-runner": {
      "import": "./dist/doc-test-runner/index.js",
      "types": "./dist/doc-test-runner/index.d.ts"
    },
    "./eslint-plugin": {
      "import": "./dist/utils/i18n-eslint-plugin.js",
      "types": "./dist/utils/i18n-eslint-plugin.d.ts"
    },
    "./vitest-db-reporter": {
      "import": "./dist/vitest-db-reporter.js",
      "types": "./dist/vitest-db-reporter.d.ts"
    }
  },
  "files": ["dist", "configs"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "mkdir -p dist && cp -r src/setup dist/ && cp src/index.ts dist/ && cp src/test-setup.ts dist/",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --reporter=verbose",
    "test:docs": "vitest run --config vitest.docs.config.ts",
    "doc-tests": "node src/doc-test-runner.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "i18n:test": "tsx src/scripts/i18n-test-cli.ts run",
    "i18n:setup": "tsx src/scripts/i18n-test-cli.ts setup",
    "i18n:validate": "tsx src/scripts/i18n-test-cli.ts validate",
    "i18n:list": "tsx src/scripts/i18n-test-cli.ts list",
    "i18n:eslint": "tsx src/scripts/i18n-test-cli.ts eslint",
    "i18n:ci": "tsx src/scripts/i18n-test-cli.ts ci"
  },
  "keywords": ["testing", "vitest", "solidjs", "reynard", "test-utils", "mocks", "fixtures", "eslint-plugin", "i18n"],
  "author": "Balazs Horvath",
  "license": "MIT",
  "eslintPlugin": {
    "name": "@reynard/i18n",
    "description": "ESLint plugin for i18n testing and hardcoded string detection"
  },
  "dependencies": {
    "@solidjs/testing-library": "0.8.10",
    "@testing-library/user-event": "14.6.1",
    "commander": "14.0.1",
    "reynard-i18n": "workspace:*",
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@types/eslint": "9.6.1",
    "@types/node": "24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.36.0",
    "happy-dom": "19.0.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.1.9",
    "vite-plugin-solid": "2.11.9",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "solid-js": "1.9.9",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
